<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content">

    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:src="@drawable/cars"
        android:layout_marginTop="12dp"
        android:layout_marginLeft="12dp"
        android:layout_marginBottom="12dp"
        android:id="@+id/user_single_image"
        />

    <TextView
        android:id="@+id/user_single_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:textColor="#000"
        android:textSize="17sp"
        android:layout_alignParentTop="true"
        android:layout_marginStart="92dp"
        android:layout_marginTop="12dp"
        android:text="Default Name" />

    <ImageView
        android:id="@+id/user_single_online_icon"
        android:layout_width="13dp"
        android:layout_height="13dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="19dp"
        android:layout_toRightOf="@id/user_single_name"
        android:background="@color/colorAccent"
        android:src="@drawable/online"
        android:visibility="invisible"
        />

    <TextView
        android:id="@+id/user_single_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/user_single_name"
        android:layout_marginTop="44dp"
        android:text="Make chatting for authentic!!" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="15dp"
        android:layout_centerVertical="true"
        android:background="@color/colorAccent"
        android:id="@+id/img_on"
        android:visibility="gone"
        />

    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="15dp"
        android:layout_centerVertical="true"
        android:background="#333"
        android:id="@+id/imf_of"
        android:visibility="gone"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/user_single_image"
        android:layout_toRightOf="@+id/user_single_image"
        android:layout_marginLeft="15dp"
        >
        <Button
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:id="@+id/request_accept_btn"
            android:text="accept"
            android:textSize="16sp"
            android:textColor="#fff"
            android:visibility="invisible"
            android:background="#333"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:id="@+id/request_cancel_btn"
            android:visibility="invisible"
            android:text="cancel"
            android:textSize="16sp"
            android:textColor="#fff"
            android:layout_marginLeft="5dp"
            android:background="#333"/>
    </LinearLayout>

</RelativeLayout>